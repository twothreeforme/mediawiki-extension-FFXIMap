{
	"name": "FFXIMap",
	"version": "1.0",
	"author": [
		"Shocks"
	],
	"url": "https://github.com/twothreeforme/mediawiki-extension-FFXIMap",
	"descriptionmsg": "Adds <FFXIMap> tag for MediaWiki use. Forked from https://github.com/atitd-community/mediawiki-emap. ",
	"license-name": "MIT",
	"type": "module",
	"requires": {
		"MediaWiki": ">= 1.25.0"
	},
	"AutoloadClasses": {
		"FFXIMap": "FFXIMap_body.php"
	},
	"ResourceModules": {
		"ext.leafletMain" : {
			"localBasePath": "modules/",
			"remoteExtPath": "FFXIMap/modules/",
			"packageFiles": [
				"leaflet.js"
			],
			"styles": [
				"leaflet.css"
			]
		},
		"ext.FFXIMap": {
			"localBasePath": "modules/",
			"remoteExtPath": "FFXIMap/modules/",
			"packageFiles": [
				"ext.FFXIMap.js",
				"mapdata.json",
				"ext.mapData.js",
				"ext.mapMarker.js"
			],
			"styles": [
				"ext.FFXIMap.css"
			]
		}		
	},
	"Hooks": {
		"ParserFirstCallInit": "FFXIMap::onParserInit"
	},
	"config": {
		"FFXIMapBasePath": {
			"description": "Server providing the map tiles. Default is the HorizonXI Wiki tile server",
			"value": "null"
			}
	},
	"manifest_version": 1
}
